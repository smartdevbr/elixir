<%= form_for @changeset, Routes.tarefa_path(@conn, :update, @tarefa), fn f -> %>
    <div class="form-group">
    <%= text_input f, :titulo, placeholder: "Titulo", class: "form-control" %>
    <%= error_tag f, :titulo %>
    <%= select f, :pronta, [true, false], class: "form-control", style: "display: block", prompt: "A tarefa estÃ¡ pronta?" %>
    <%= error_tag f, :pronta %>
    </div>
    <%= submit "Alterar tarefa", class: "btn btn-primary" %>
<% end %>